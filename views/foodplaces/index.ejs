<% layout('layout/boilerplate') %>
    <h1>All Places</h1>
    <div>
        <a href="/foodplaces/new" class="btn btn-secondary">Add New foodplace</a>
    </div>
    <% for(let foodplace of foodplaces) { %>
        <div class="card" mb-3>
            <div class="row">
                <% if(foodplace.image.length != 0) { %>
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= foodplace.image[0].url %>" alt="">
                </div>
                <% } %>
                <div class="col-mg-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= foodplace.title %></h5>
                        <p class="card-text"><%= foodplace.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= foodplace.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/foodplaces/<%= foodplace.id %>">View foodplace</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

